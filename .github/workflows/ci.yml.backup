name: CI

on:
  push:
    branches: [ Production, main ]
  pull_request:
    branches: [ Production, main ]

jobs:
  build-and-test:
    name: Build and Test
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Set up JDK 21
      uses: actions/setup-java@v4
      with:
        java-version: '21'
        distribution: 'temurin'
        cache: maven
    
    - name: Set up Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '20'
        cache: 'npm'
    
    - name: Build Java Backend
      run: mvn clean compile -B
    
    - name: Run Java Tests
      run: mvn test -B
    
    - name: Package Java Backend
      run: mvn package -B
    
    - name: Install Frontend Dependencies
      run: npm ci
    
    - name: Build Electron Main Process
      run: npm run build:electron
    
    - name: Build Vite Frontend
      run: npm run build
    
    - name: Type Check
      run: npx tsc --noEmit
      continue-on-error: true
    
    - name: Upload Java Artifacts
      uses: actions/upload-artifact@v4
      with:
        name: java-backend
        path: target/*.jar
        retention-days: 30
    
    - name: Upload Frontend Build
      uses: actions/upload-artifact@v4
      with:
        name: frontend-dist
        path: dist/
        retention-days: 30

  package-electron:
    name: Package Electron App
    needs: build-and-test
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os: [ubuntu-latest, windows-latest, macos-latest]
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Set up Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '20'
        cache: 'npm'
    
    - name: Set up JDK 21
      uses: actions/setup-java@v4
      with:
        java-version: '21'
        distribution: 'temurin'
        cache: maven
    
    - name: Install Dependencies
      run: npm ci
    
    - name: Build Java Backend
      run: mvn clean package -B
    
    - name: Build Frontend
      run: npm run build
    
    - name: Build Electron
      run: npm run build:electron
    
    - name: Package Electron App
      run: npm run package
      env:
        GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
    
    - name: Upload Packaged App
      uses: actions/upload-artifact@v4
      with:
        name: electron-app-${{ matrix.os }}
        path: |
          release/*.exe
          release/*.dmg
          release/*.AppImage
          release/*.deb
        if-no-files-found: warn
        retention-days: 30
