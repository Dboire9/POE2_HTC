{
  "name": "poe2-htc",
  "version": "0.5.1",
  "description": "Path of Exile 2 Item Crafting Pathfinder",
  "author": {
    "name": "Dboire",
    "email": "dboire@student.42.fr",
    "url": "https://github.com/Dboire9"
  },
  "license": "AGPL-3.0",
  "main": "dist-electron/main.cjs",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:electron": "tsc -p electron/tsconfig.json && mv dist-electron/main.js dist-electron/main.cjs && cp electron/preload.js dist-electron/preload.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run build:electron && NODE_ENV=development electron . --no-sandbox\"",
    "electron:build": "npm run build && npm run build:electron && electron-builder",
    "electron:build:win": "npm run build && npm run build:electron && electron-builder --win --publish never",
    "electron:build:linux": "npm run build && npm run build:electron && electron-builder --linux --publish never",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "lucide-react": "^0.553.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.0",
    "vite": "^7.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dboire.poe2htc",
    "productName": "POE2HTC",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "pom.xml",
      "src/main/**/*",
      "target/classes/**/*",
      "!src/**/*",
      "!electron/**/*"
    ],
    "extraResources": [
      {
        "from": "target/poe-crafter-1.0-SNAPSHOT-jar-with-dependencies.jar",
        "to": "backend.jar"
      },
      {
        "from": "target/classes",
        "to": "target/classes",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "pom.xml",
        "to": ".",
        "filter": [
          "pom.xml"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "Dboire9",
      "repo": "POE2_HTC"
    }
  }
}
